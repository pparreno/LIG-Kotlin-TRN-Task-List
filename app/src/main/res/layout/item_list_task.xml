<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <ImageView
        android:id="@+id/favorite_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:contentDescription="@string/content_desc_favorite_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_favorite" />

    <ImageView
        android:id="@+id/important_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="15dp"
        android:contentDescription="@string/content_desc_important_icon"
        app:layout_constraintEnd_toStartOf="@id/favorite_icon"
        app:layout_constraintTop_toTopOf="@id/favorite_icon"
        app:srcCompat="@drawable/ic_label_important" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@id/favorite_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/important_icon"/>
</androidx.constraintlayout.widget.ConstraintLayout>